{{> administrador/header}}
<!-- admin -->
<link rel="stylesheet" href="/css/category.css">

<h1 class="title-section">Productos</h1>
<section class="container__category">
    <table class="table__content">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Categoria</th>
                <th>Precio</th>
                <th>Estado</th>
                <th>Acci√≥n</th>
                <th>Ingredientes</th>
                <th>Aprobar</th>
            </tr>
        </thead>
        <tbody>
            {{#each productos}}
            <tr>
                <td>{{this.dataValues.nombre}}</td>
                <td>{{this.dataValues.categoria}}</td>
                <td>${{this.dataValues.precio}}</td>
                <td>{{this.dataValues.estado}}</td>
                <td>
                    <a href=""><span class="material-icons action-icon">update</span></a>
                    <a href=""><span class="material-icons action-icon">delete</span></a>
                </td>
                <td>
                    <a href="/administrador/agregar-ingredientes/{{this.dataValues.id}}"><i
                            class="fas fa-bacon action-icon"></i></a>
                    <a href="/administrador/eliminar-ingredientes/{{this.dataValues.id}}"><i
                            class="fas fa-trash-alt action-icon"></i></a>
                </td>
                <td>
                    <form action="/administrador/aprobar-producto" method="post">
                        <input type="hidden" name="id" value="{{this.dataValues.id}}">
                        <input type="hidden" name="nombre" value="{{this.dataValues.nombre}}">
                        <button><span class="material-icons action-icon">create</span></button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</section>
{{> footer}}