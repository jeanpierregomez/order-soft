<section class="container__category">
    <div class="register__category">
        <form action="/administrador/categorias" method="POST">
            <label class="data--lbl" for="nombre">Nombre</label>
            <input class="data--inpt" type="text" placeholder="Nombre de la Categoria" name="nombre" required>
            <button class="category--btn">guardar</button>
        </form>
    </div>
    <table class="table__content">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Acci√≥n</th>
            </tr>
        </thead>
        <tbody>
            {{#each categorias}}
            <tr>
                <td>
                    {{this.dataValues.nombre}}
                </td>
                <td>
                    <a href=""><span class="material-icons action-icon">delete</span></a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</section>
