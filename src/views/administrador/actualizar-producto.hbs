{{> administrador/header}}
<!-- admin -->
<link rel="stylesheet" href="/css/admin_product.css">
<section class="container--register">
    <div class="container__content--register">
        <form class="container__content--form" enctype="multipart/form-data" action="/administrador/actualizar-producto"
            method="post">
            <div class="data">
                <label class="data--lbl" for="nombre">Nombre</label>
                <input type="hidden" name="id" value="{{productoDB.dataValues.id}}">
                <input class="data--inpt" type="text" placeholder="Nombre del producto" name="nombre"
                    value="{{productoDB.dataValues.nombre}}" required>

                <label class="data--lbl" for="desc">Descripción</label>
                <textarea class="data--txt" name="descripcion" rows="9" cols="50" placeholder="Descripción del producto"
                    required>{{productoDB.dataValues.descripcion}}</textarea>

                <label class="data--lbl" for="categoria">Categoria</label>
                <select class="data--inpt" name="id_categoria" value="{{productoDB.dataValues.id_categoria}}" required>
                    {{#each categorias}}
                    <option value="{{this.dataValues.id}}">
                        {{this.dataValues.nombre}}
                    </option>
                    {{/each}}
                </select>
                <label class="data--lbl" for="precio">Precio</label>
                <input class="data--inpt" type="number" min="0" placeholder="Precio del producto" name="precio"
                    value="{{productoDB.dataValues.precio}}" required>
            </div>
            <div class="f__content--register">
                <label class="data--lbl" for="c-imagen">Imagen del Producto</label>
                <img id="preview" src="/{{productoDB.dataValues.imagen}}" alt="Imagen del producto" name="c-imagen"
                    width="200px" height="200px">
                <input type="hidden" name="url_image" value="{{productoDB.dataValues.imagen}}">
                <input type="file" name="image" id="file" accept=".jpg,.png,.svg,.jpeg" onchange="previewImage();" />
                <button class="data--btn" type="submit">Actualizar Producto</button>
            </div>
        </form>
    </div>
</section>
{{> footer}}
<script src="/js/administrador/nuevo-producto.js"></script>